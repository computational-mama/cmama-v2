---
layout: layouts/base.njk
---
<div class="mx-auto w-full md:w-2/3 lg:w-2/3  xl:w-2/3  2xl:w-2/3">

<h1 class="font-cirrus">{{ title }}</h1>
   <div class="flex flex-row flex-wrap">
{% for tag in tags %}
{% if tag != "projects" %}
      <p class="border italic px-4 py-2 rounded-full text-xs">{{ tag }}</p>
   {% endif %}
{% endfor %}
</div>


<p class="font-mono">
   <sup>updated {{ page.date | postDate }}</sup>
   <div id="content">{{ content | safe }}</div>
</p>
   {% include '../components/thumbnails.njk'%}
   {% include '../components/bulkvideo.njk'%}

</div>
